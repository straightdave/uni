<VirtualHost *:443>
    SSLEngine On
    SSLCertificateFile /etc/apache2/ssl/apache.pem
    SSLCertificateKeyFile /etc/apache2/ssl/apache.key

    ServerAdmin webmaster@localhost
    DocumentRoot /home/dave/my_development/uni/

    <Directory /home/dave/my_development/uni/>
	AllowOverride All
	Order allow,deny
	allow from all
    </Directory>
</VirtualHost>
